{
  "name": "spaced",
  "private": true,
  "description": "",
  "type": "module",
  "scripts": {
    "build": "vite build --emptyOutDir",
    "clippy": "cargo clippy --manifest-path tauri/Cargo.toml --all-features --all-targets",
    "clippy:fix": "npm run clippy -- --fix",
    "dev": "vite",
    "fmt": "cargo fmt --manifest-path tauri/Cargo.toml --check",
    "fmt:fix": "cargo fmt --manifest-path tauri/Cargo.toml",
    "lint": "npx eslint app",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install",
    "prettier": "npx prettier app --check",
    "prettier:fix": "npm run prettier -- --write",
    "serve": "vite preview",
    "tauri": "tauri",
    "bin": "tauri/target/release/spaced"
  },
  "lint-staged": {
    "*.{html,json,md,yaml,yml}": [
      "prettier --check"
    ],
    "*.{js,md,ts,tsx}": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.0.0",
    "@tauri-apps/cli": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-solid": "^0.13.0",
    "eslint-plugin-sort-destructure-keys": "^1.0.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "eslint-plugin-markdown": "^3.0.0",
    "husky": "^8.0.0",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.0.0",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "solid-js": "^1.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-plugin-solid": "^2.0.0"
  }
}

{
  "name": "spaced",
  "private": true,
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "serve": "vite preview",
    "lint": "npx eslint srcs/app",
    "lint:fix": "npx eslint srcs/app --fix",
    "prettier": "npx prettier srcs/app --check",
    "prettier:fix": "npx prettier srcs/app --write",
    "clippy": "cargo clippy --all-features --all-targets",
    "clippy:fix": "cargo clippy --all-features --all-targets --fix",
    "fmt": "cargo fmt --check",
    "fmt:fix": "cargo fmt --check --all",
    "tauri": "tauri",
    "bin": "target/release/spaced",
    "migrate": "DATABASE_URL=\"postgres://admin:password@localhost:5432/spaced\" sqlx migrate run",
    "services": "./scripts/start.sh",
    "producer": "RUST_LOG=info cargo run -p item_producer",
    "consumer": "RUST_LOG=info cargo run -p item_consumer",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{html,json,md,yaml,yml}": [
      "prettier --check"
    ],
    "*.{js,ts,tsx}": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.0.0",
    "@tauri-apps/cli": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "axios": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-solid": "^0.13.0",
    "eslint-plugin-sort-destructure-keys": "^1.0.0",
    "eslint-plugin-unicorn": "^48.0.0",
    "google-protobuf": "^3.6.1",
    "grpc": "file:app/grpc",
    "grpc-web": "^1.0.0",
    "husky": "^8.0.0",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-packagejson": "^2.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "solid-js": "^1.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vite-plugin-solid": "^2.0.0",
    "socket.io-client": "^4.0.0"
  }
}

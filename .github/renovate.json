{
  "extends": ["config:recommended"],
  "schedule": ["every weekday"],
  "labels": ["dependencies", "{{manager}}"],
  "enabledManagers": [
    "cargo",
    "npm",
    "docker-compose",
    "dockerfile",
    "github-actions"
  ],
  "semanticCommits": "enabled",
  "commitMessageTopic": "{{depName}} from {{currentVersion}}",
  "packageRules": [
    {
      "groupName": "cargo updates",
      "matchManagers": ["cargo"]
    },
    {
      "groupName": "npm updates",
      "matchManagers": ["npm"]
    }
  ]
}

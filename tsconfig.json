{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "types": ["vite/client"]
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "exclude": ["**/dist"]
}

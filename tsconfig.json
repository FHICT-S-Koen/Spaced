{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "exclude": ["**/dist"]
}

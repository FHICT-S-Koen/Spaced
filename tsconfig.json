{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "experimentalResolver": true
  },
  "exclude": ["**/dist"]
}
